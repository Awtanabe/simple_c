<%= form_with(model: plan, local: true) do |form| %>
  <% if plan.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(plan.errors.count, "error") %> prohibited this plan from being saved:</h2>

      <ul>
      <% plan.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :name %>
    <%= form.text_field :name %>
  </div>

  <div class="field">
    <%= form.label :price %>
    <%= form.text_field :price %>
  </div>

  <%= form.fields_for :started_at do |s| %>
    <div class="field">
    <%= s.label :開始時間 %>
    <%= s.datetime_select :start_time %>
    <div class="field">
    <%= s.label :終了時間 %>
    <%= s.datetime_select :end_time %>
  </div>

  <%end%>
  <div class="field">
    <%= form.label :ゴルフ場 %>
    <%= form.select :gold_place_ids,  GoldPlace.all.map{ |gp| [gp.name, gp.id]} %>
  </div>
  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
